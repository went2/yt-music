.video-list__wrapper {
  margin-top: 50rpx;
}

.list {
  margin-top: 20rpx;
  margin-left: -14px;
  white-space: nowrap;
  justify-content: space-between;
}

.list .item {
  display: inline-block;
  vertical-align: top;
  margin-left: 8px;
  width: 600rpx;
}

.list .item:last-of-type {
  margin-right: 15rpx;
}

.list .item .pic {
  width: 590rpx;
  height: 330rpx;
  border-radius: 20rpx;
}

.list .item .text {
  padding: 0 8rpx;
  font-size: 30rpx;

  /* 限制两行 */
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list .item .text2 {
  margin-top: 10rpx;
  padding: 0 8rpx;
  font-size: 26rpx;
  color: #444;
}