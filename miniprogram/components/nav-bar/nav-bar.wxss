
.nav {
  height: 44px;
  display: flex;
  color: #fff;
}

.nav .middle {
  flex: 1;
}

.left, .middle, .right {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav .left, .nav .right {
  width: 120rpx; 
}

.left .default, .middle .default {
  display: none;
}

.left .default .image {
  width: 40rpx;
  height: 40rpx;
}

.left .slot:empty + .default, .middle .slot:empty + .default {
  display: flex;
}

.middle .default {
  letter-spacing: 1rpx;
}

