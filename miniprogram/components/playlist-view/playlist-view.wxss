.playlist__wrapper {
  margin-top: 50rpx;
}

.list {
  margin-top: 20rpx;
  margin-left: -14px;
  white-space: nowrap;
  justify-content: space-between;
}

.list .item {
  display: inline-block;
  vertical-align: top;
  margin-left: 8px;
  width: 330rpx;

  text-align:center;
}

.list .item:last-of-type {
  margin-right: 20rpx;
}

.list .item .pic {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20rpx;
}

.list .item .text {
  padding: 0 8rpx;
  font-size: 28rpx;
  text-align: left;

  /* 限制两行 */
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item .info {
  font-size: 26rpx;
  text-align: left;
  color: #444;
  padding-left: 8rpx;
  margin-top: 8rpx;
}