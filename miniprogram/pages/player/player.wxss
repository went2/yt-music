.bg, .bg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .3);
  backdrop-filter: blur(20px);
}

.nav-middle {
  display: flex;
  align-items: center;
  color: #ddd;
}

.nav-middle .nav-item {
  margin: 0 10rpx;
  font-size: 28rpx;
}

.active {
  color: #fff;
}

.content {
  padding: 20rpx;
}

/* player */
.player {
  color: #fff;
  letter-spacing: 1rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.album {
  margin-top: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.album .image {
  width: 100%;
  border-radius: 12rpx;
}

.album .name {
  margin-top: 40rpx;
  font-size: 48rpx;
  font-weight: 700;
}

.album .singer {
  margin-top: 15rpx;
}

.lyric {
  text-align: center;
  margin-bottom: 40rpx;
}

.progress .slider {
  margin: 0 20rpx;
}

.progress .time {
  display: flex;
  justify-content: space-between;
}

.buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  align-items: center;
}

.buttons .btn {
  width: 60rpx;
  height: 60rpx;
}

.buttons .btn.mode {
  width: 80rpx;
  height: 80rpx;
}

.buttons .btn.play {
  width: 140rpx;
  height: 140rpx;
}

.lyric-list {
  padding: 40rpx;
  box-sizing: border-box;
  color: #bbb;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
}

.lyric-list ::-webkit-scrollbar {
  display: none;
}

.lyric-list .item {
  height: 70rpx;
  line-height: 70rpx;
}

.lyric-active {
  color: #fff;
  font-size: 40rpx;
}

