/* pages/detail-playlist/detail-playlist.wxss */
.list {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list .item {
  margin: 15rpx 0;
  width: 330rpx;
  text-align:center;
}

.list .item .pic {
  width: 320rpx;
  height: 320rpx;
  border-radius: 16rpx;
}

.list .item .text {
  padding: 0 8rpx;
  font-size: 28rpx;
  text-align: left;

  /* 限制两行 */
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item .info {
  font-size: 26rpx;
  text-align: left;
  color: #444;
  padding-left: 8rpx;
  margin-top: 8rpx;
}