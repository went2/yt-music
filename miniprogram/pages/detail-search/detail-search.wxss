
.hot-search .text {
  color: #333;
}

.hot-search .list {
  display: flex;
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.hot-search .item {
  color: #666;
  border: 2rpx solid #aaa;
  border-radius: 30rpx;
  padding: 5rpx 12rpx;
  margin: 7rpx;
  font-size: 26rpx;
}

.suggest {
  margin-top: 20rpx;
  padding: 10rpx 30rpx;
}

.suggest .item {
  display: flex;
  align-items: center;
  margin: 18rpx 0;
  color: #666;
}

.suggest .item .text {
  margin-left: 20rpx;
  flex: 1;
}

.suggest .item .image {
  width: 28rpx;
  height: 28rpx;
}

.suggest .item .right {
  position: relative;
  right: 30rpx;
}

.songs .list .item {
  margin: 18rpx 0;
  display: flex;
  align-items: center;
}

.songs .list .item .left .image {
  width: 75rpx;
  height: 75rpx;
  border-radius: 6rpx;
}

.songs .list .item .middle {
  margin-left: 16rpx;
  flex: 1;
}

.songs .list .item .middle .info {
  font-size: 28rpx;
  color: #999;
}
